# keyboard codes = https://cloud.githubusercontent.com/assets/6175959/18551554/35137fc6-7b59-11e6-81a0-bef19ed5db5e.png

# go to to space
# ctrl + rshift - 0x2A: terminal-notifier -message 's' # vacant


# move window to space
alt + ctrl + lshift - h: yabai -m window --space terminal
alt + ctrl + lshift - n: yabai -m window --space create
alt + ctrl + lshift - e: yabai -m window --space browse
alt + ctrl + lshift - i: yabai -m window --space communicate
alt + ctrl + lshift - o: yabai -m window --space personal
alt + ctrl + lshift - 0x27: yabai -m window --space laptop1

# focus on nearby windows
ctrl + lshift - l: yabai -m window --focus west
ctrl + lshift - y: yabai -m window --focus east
ctrl + lshift - u: yabai -m window --focus north
ctrl + lshift - 0x23: yabai -m window --focus south

# resize windows
ctrl + lshift - 0x21: yabai -m window west --resize right:-100:0 2> /dev/null || yabai -m window --resize right:-100:0
ctrl + lshift - 0x1E: yabai -m window east --resize left:100:0 2> /dev/null || yabai -m window --resize left:100:0
# todo: if needed uncomment me
# ctrl + rshift - ? : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
# ctrl + rshift - ? : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20

# swap
ctrl + lshift - j: /Users/mike/scripts/cycle_clockwise.sh

# focus on apps
ctrl + lshift - k: open /Applications/iTerm.app

